<h1 class="text-center mt-5">Resultados para {{#each result}} <strong>{{name}}</strong> {{/each}} </h1>

<hr width=50% align=center>

{{#each result}}
<div class="card" style="width: 18rem;"></div>
  <img class="card-img-top "src="..." class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">{{name}}</h5>
    <p class="card-text">{{description}}</p>
    <span class="card-text">{{owner.neighbourhood}}</span>
    <a href="/details/{{id}}" class="btn btn-primary">Visualizar</a>
  </div>
</div>
{{/each}}
