
{{#with result}}

<div id="update-form">
  <form action="/to-borrow/{{_id}}/update" method="POST">

  <h3 class="col-md-5 mt-3 mb-2 offset-md-4">Alterar an√∫ncio</h3>
  <hr>

  <select class="form-control col-md-5 mb-5 offset-md-3" id="toBorrowCategory" name="category">
          <option value="" selected disabled>Categoria</option>
          <option value="ferramentas">Ferramentas</option>
          <option value="livros">Livros</option>
          <option value="jogos">Jogos</option>
      </select>

    
    <div class="col-md-5 mb-5 offset-md-3">
      <input type="text" class="form-control" id="toBorrowName" name="name" value="{{name}}"/>
    </div>
    <div class="col-md-5 mb-5 offset-md-3">
      <input type="text" class="form-control" id="toBorrowDescription" name="description"  value="{{description}}" />
    </div>
    <div class="col-md-5 mb-5 offset-md-3">
    <input type="file" id="toBorrowImg" name="photo" value="{{photo}}"/>
    </div>
    <button type="submit" class="btn btn-primary col-md-3 offset-md-4">
      Salvar
    </button>
  </form>
</div>
{{/with }}

